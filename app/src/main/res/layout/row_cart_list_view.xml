<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <ImageView
        android:id="@+id/row_cart_image"
        android:adjustViewBounds="true"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Tên sản phẩm"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/row_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Giá tiền"
            android:textColor="@color/textLoaiSanPham"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/row_cart_minus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="-"
                android:gravity="center"
                android:focusable="false"/>
            <TextView
                android:id="@+id/row_cart_value"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="1"
                android:gravity="center"
                android:focusable="false"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/row_cart_plus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="+"
                android:gravity="center"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>